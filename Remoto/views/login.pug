doctype html
html
  head
    title Login
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    link(href="/public/bootstrap-theme.css" rel="stylesheet")
    link(href='/public/app.css', rel='stylesheet')
    link(href='/public/login.css', rel='stylesheet')
  body
    div.container
      div.row
        div.col-md-4.col-md-offset-4
          div.login-panel.panel.panel-default
            div.panel-heading
              h3.panel-title Login

            div.panel-body
              if (message)
                div.alert.alert-danger #{message}

              form(method='post', action='/login')
                fieldset
                  div.form-group.has-feedback
                    input.form-control(type='text', name='username', placeholder='Usu√°rio')
                    span.glyphicon.glyphicon-user.form-control-feedback

                  div.form-group.has-feedback
                    input.form-control(type='password', name='password', placeholder='Senha')
                    span.glyphicon.glyphicon-lock.form-control-feedback

                  div.form-group
                    button.btn.btn-success.btn-block.btn-lg(type='submit') Entrar


    
